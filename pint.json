{
    "preset": "laravel",
    "rules": {
        "no_superfluous_elseif": true,
        "final_class": true,
        "no_useless_else": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "cast_spaces": {
            "space": "single"
        },
        "single_line_empty_body": false,
        "ordered_class_elements": {
            "order": [
                "use_trait",
                "case",
                "constant",
                "constant_public",
                "constant_protected",
                "constant_private",
                "property_public",
                "property_protected",
                "property_private",
                "construct",
                "destruct",
                "magic",
                "phpunit",
                "method_abstract",
                "method_public_static",
                "method_public",
                "method_protected_static",
                "method_protected",
                "method_private_static",
                "method_private"
            ],
            "sort_algorithm": "none"
        }
    }
}
